pipeline {
    agent any
    tools {nodejs "Node"}
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url:'https://github.com/vcosmusjoao/vizinhelp.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        
    }
}
